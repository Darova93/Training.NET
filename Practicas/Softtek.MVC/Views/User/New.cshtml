@model Softtek.MVC.ViewModels.CreateUserViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a new user</h2>
@using (Html.BeginForm("Save", "User"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.ProjectId)
        @Html.DropDownListFor(x => x.ProjectId, new SelectList(Model.Projects, "Id", "Name"), "Select a project", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ProjectId)
    </div>
    @Html.HiddenFor(x => x.Id);
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}