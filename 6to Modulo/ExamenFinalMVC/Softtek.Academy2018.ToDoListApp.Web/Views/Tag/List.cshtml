@model IEnumerable<Softtek.Academy2018.ToDoListApp.Web.Models.Tag>
@using Softtek.Academy2018.ToDoListApp.Web.Models
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tag List</h2>
<br />
@Html.ActionLink("Add tag", "New", "Tag", new Tag { })
<hr />
<br />

@if (Model.Count() <= 0)
{
    <h1>You don't have any tags yet!</h1>
}
else
{
    <table class="table table-striped" , style="table-layout:fixed">
        <thead style="display:table-header-group">
            <tr>
                <th id="th1">Name</th>
                <th id="th2">Status</th>
                <th id="th3">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model)
                {

                <tr>
                    <td headers="th1">@tag.Name</td>
                    <td headers="th2">@tag.IsActive</td>
                    <td headers="th3">@Html.Partial("_PartialTagButton", new PartialButton { Id = tag.Id })</td>
                </tr>

            }
        </tbody>
    </table>
}

