@model IEnumerable<Softtek.Academy2018.ToDoListApp.Web.ViewModels.ItemViewModel>
@using Softtek.Academy2018.ToDoListApp.Web.Models
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My pending items</h2>
<br />
@Html.ActionLink("Add item", "New", "Item")
<hr />
<br />

@if (Model.Count() <= 0)
{
    <h1>You don't have any items yet!</h1>
}
else
{
    <table class="table table-striped", style="table-layout:fixed">
        <thead style="display:table-header-group">
            <tr>
                <th id="th1">Title</th>
                <th id="th2">Description</th>
                <th id="th3">Status</th>
                <th id="th4">Due Date</th>
                <th id="th5">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {

                <tr>
                    <td headers="th1">@item.Title</td>
                    <td headers="th2">@item.Description</td>
                    <td headers="th3">@item.Status</td>
                    <td headers="th4">@item.DueDate</td>
                    <td headers="th5">@Html.Partial("_PartialButtons", new PartialButton { Id = item.Id })</td>
                </tr>

            }
        </tbody>
    </table>
}

