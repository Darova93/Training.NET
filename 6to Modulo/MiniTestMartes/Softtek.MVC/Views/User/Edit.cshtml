@model Softtek.MVC.ViewModels.CreateUserViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update user</h2>
@using (Html.BeginForm("Update", "User"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.FirstName)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.LastName)
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.LastName)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.IS)
        @Html.TextBoxFor(x => x.IS, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.IS)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Salary)
        @Html.TextBoxFor(x => x.Salary, new { @type = "number", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Salary)
    </div>

    @*<div class="form-group">
        @Html.LabelFor(x => x.DateOfBirth)
        @Html.TextBoxFor(m => m.DateOfBirth, "{0:MM/dd/yyyy}", new { @class = "form-control" })
    </div>*@

    <div class="form-group">
        @Html.LabelFor(x => x.DateOfBirth)
        @Html.TextBoxFor(m => m.DateOfBirth, new { @type = "date", @class = "form-control" })
    </div>

    @*<div class="form-group">
            @Html.LabelFor(x => x.ProjectId)
            @Html.DropDownListFor(x => x.ProjectId, new SelectList(Model.Projects, "Id", "Name"), "Select a project", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ProjectId)
        </div>*@

    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.Id);
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
