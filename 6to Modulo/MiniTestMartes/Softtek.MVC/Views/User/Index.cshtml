@model IEnumerable<Softtek.MVC.Models.User>
@using Softtek.MVC.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User List</h2>
<br />
@Html.ActionLink("Add a new user", "New", "User")
<hr />
<br />

@if (Model.Count() <= 0)
{
    <h1>You don't have any users</h1>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr scope="col">Name</tr>
            <tr scope="col">Options</tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => user.FirstName)
                    </td>
                    <td>
                        @Html.Partial("_TablePartialButton", new PartialButton
                   {
                       Id = user.Id
                   })
                    </td>

                </tr>

            }
        </tbody>
    </table>
}
