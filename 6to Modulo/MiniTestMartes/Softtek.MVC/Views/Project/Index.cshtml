@model IEnumerable<Softtek.MVC.Models.Project>
@using Softtek.MVC.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Project List</h2>
<br />
@Html.ActionLink("Add a new project", "New", "Project")
<hr />
<br />

@if (Model.Count() <= 0)
{
    <h1>You don't have any projects</h1>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr scope="col">Name</tr>
            <tr scope="col">Options</tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => project.Name)
                    </td>
                    <td>
                        @Html.Partial("_TablePartialButton", new PartialButton
                       {
                           Id = project.Id
                       })
                    </td>

                </tr>

            }
        </tbody>
    </table>
}
