@model Softtek.MVC.ViewModels.CreateProjectViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a new project</h2>
@using (Html.BeginForm("Save", "Project"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Area)
        @Html.TextBoxFor(x => x.Area, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Area)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.TechnologyStack)
        @Html.TextBoxFor(x => x.TechnologyStack, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TechnologyStack)
    </div>

    @Html.HiddenFor(x => x.Id);
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}