@model IEnumerable<Softtek.MVC.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Project List</h2>
<br />
@Html.ActionLink("Add a new project", "New", "Project")
<hr />
<br />

@if (Model.Count() <= 0)
{
    <h1>You don't have any projects</h1>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr scope="col">Name</tr>
            <tr scope="col">Options</tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
                {
                <tr>
                    <td>@Html.ActionLink(project.Name, "Details", "Project", new { id = project.Id }, null)</td>
                </tr>

            }
        </tbody>
    </table>
}
